            <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="arch" type="xml">
                <filter name="customer" position="after">
                   <filter string="Dealers" name="dealer" domain="[('dealer','=',1)]" help="Dealers"/>
                </filter>
            </field>
        </record>
        
        
