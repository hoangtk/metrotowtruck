<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="hr_rpt_attend_month_view" model="ir.ui.view">
            <field name="name">HR Attendance Monthly Report</field>
            <field name="model">hr.rpt.attend.month</field>
            <field name="arch" type="xml">
            <form string="Report" version="7.0">
                <field name="name" invisible="1"/>
                <field name="type" invisible="1"/>
                <group colspan="4">
					<div class="oe_title">
                        <h1>
                        <!-- 1.Report title -->
						<field name="title" readonly="1"/>
						</h1>
					</div>
					<div class="oe_right oe_button_box" name="buttons">
	                    	<field name="show_search"/>
	                    	<field name="save_pdf" invisible="1"/>
	                    	<button name="run_report" string="Search" type="object" default_focus="1" class="oe_highlight"/>
	                    	<button name="save_pdf" string="PDF" type="object" attrs="{'invisible':[('save_pdf','!=',True)]}"/>
					</div>
                </group>                
                <group name="options" attrs="{'invisible':[('show_search','!=',True)]}">
	                <group colspan="4" name="options_common">
						<field name="company_id" groups="base.group_multi_company" widget="selection"/>			
	                </group>
	                <!-- 2.Report options -->
	                <group colspan="4" name="options_rpt">
		                <group>
	                        <label for="date_from" string="Dates"/>
	                        <div>
							    <field name="date_from" domain="[('company_id', '=', company_id)]" class="oe_inline" widget="date"/> -
							    <field name="date_to" domain="[('company_id', '=', company_id)]" class="oe_inline" widget="date"/>  
	                        </div>	
	                        <field name="emp_ids"/>
		                </group>               
	                </group>
                </group>
                <field name="show_result" invisible="1"/>
				<!-- 3.Report lines -->
				<field name="rpt_lines" readonly="1" attrs="{'invisible':['|',('show_result','!=',True)]}">
					<tree editable="bottom">
							<field name="seq"/>
							<field name="emp_id"/>
							<!-- <field name="emp_code"/> -->
							<field name="days_work"/>
							<field name="days_attend"/>
							<field name="hours_ot" widget="float_time"/>
							<field name="days_work2"/>
							<field name="days_attend2"/>
							<field name="hours_ot2_nonwe" widget="float_time"/>
							<field name="hours_ot2_we" widget="float_time"/>
					</tree>
				</field>		
            </form>
            </field>
        </record>   
        
        <record id="hr_rpt_attend_month_action" model="ir.actions.act_window">
            <field name="name">Attendances Monthly Report</field>
            <field name="res_model">hr.rpt.attend.month</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="hr_rpt_attend_month_view"/>
            <field name="context">{'default_title':'Attendance Monthly Report'}</field>
            <field name="target">inline</field>
        </record>
		
        <menuitem
            id="hr_rpt_attend_month_menu"
            action="hr_rpt_attend_month_action"
            groups="base.group_hr_manager"
            parent="hr_attendance.menu_hr_attendance"
            sequence="29"
           />   
    </data>
</openerp>
