<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
         <act_window name="Set Employees Working Time"
            res_model="hr.emp.worktime"
            src_model="hr.employee"
            view_mode="form"
            target="new"
            key2="client_action_multi"
            multi="True"
            id="action_hr_emp_worktime"/>
           
        <record id="view_hr_emp_worktime_form" model="ir.ui.view">
            <field name="name">view_hr_emp_worktime_form</field>
            <field name="model">hr.emp.worktime</field>
            <field name="arch" type="xml">
                <form string="Set Employees Working Time" version="7.0">
                   <group>
	                	<field name="calendar_id"/>
			            <field name="emp_ids"/>
                   </group>
                <footer>
		            <button name="set_worktime" string="Set Working Time" type="object" class="oe_highlight" 
		            	confirm="Are you sure to set the working time to the selected employees?"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
                </form>
            </field>
        </record>
    </data>
</openerp>
